{% endfor %}
{% endif %}
{
    {% if item.options is defined -%}
    {% for option in item.options -%}
    {{ option }}
    {% endfor -%}
    {% endif %}
    {%- if item.scripts is defined -%}
    {%- for name, scripts in item.scripts.items() -%}
    {{ name }}
    {% for script in scripts %}
    {{ script }}
    {% endfor -%}
    endscript
    {% endfor -%}
    {% endif -%}
